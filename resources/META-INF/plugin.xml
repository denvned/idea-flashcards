<idea-plugin>
  <id>org.intellij.flashcards</id>
  <name>Flashcards</name>
  <version>0.0.1-alpha</version>
  <vendor email="denis.nedelyaev@jetbrains.com" url="https://www.jetbrains.com">JetBrains</vendor>

  <description><![CDATA[
      Learn IDE keyboard shortcuts using flashcards.
  ]]></description>

  <change-notes><![CDATA[
      Initial version.
  ]]></change-notes>

  <idea-version since-build="145.0"/>

  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceInterface="com.intellij.flashcards.Flashcards" serviceImplementation="com.intellij.flashcards.Flashcards" />
  </extensions>

  <project-components>
    <component>
      <interface-class>com.intellij.flashcards.ui.FlashcardToolWindow</interface-class>
      <implementation-class>com.intellij.flashcards.ui.FlashcardToolWindow</implementation-class>
    </component>
  </project-components>

  <actions>
    <action id="Flashcards" class="com.intellij.flashcards.ui.ShowFlashcardsAction" text="Flashcards"
            description="Learn keyboard shortcuts">
      <add-to-group group-id="HelpMenu" anchor="after" relative-to-action="ProductivityGuide"/>
    </action>
  </actions>

</idea-plugin>